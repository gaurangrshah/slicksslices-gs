{
  "workbench.colorCustomizations": {
    "titleBar.activeForeground": "#e7e7e7",
    "titleBar.inactiveForeground": "#e7e7e799",
    "titleBar.activeBackground": "#fd153b",
    "titleBar.inactiveBackground": "#fd153b99",
    "activityBar.activeBackground": "#fd4865",
    "activityBar.activeBorder": "#105f01",
    "activityBar.background": "#fd4865",
    "activityBar.foreground": "#15202b",
    "activityBar.inactiveForeground": "#15202b99",
    "activityBarBadge.background": "#105f01",
    "activityBarBadge.foreground": "#e7e7e7",
    "statusBar.background": "#fd153b",
    "statusBar.foreground": "#e7e7e7",
    "statusBarItem.hoverBackground": "#fd4865"
  },
  // These are all my auto-save configs
  "editor.formatOnSave": true,
  // turn it off for JS and JSX, we will do this via eslint
  "[javascript]": {
    "editor.formatOnSave": false
  },
  "[javascriptreact]": {
    "editor.formatOnSave": false
  },
  // tell the ESLint plugin to run on save
  "editor.codeActionsOnSave": {
    "source.fixAll": true
  },
  // Optional BUT IMPORTANT: If you have the prettier extension enabled for other languages like CSS and HTML, turn it off for JS since we are doing it through Eslint already
  "prettier.disableLanguages": [
    "javascript",
    "javascriptreact"
  ],
  "peacock.color": "#fd153b",
}
